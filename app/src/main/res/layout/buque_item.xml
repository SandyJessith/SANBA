<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp">

         <TextView
             android:id="@+id/text_view_priority"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentEnd="true"
             android:text="1"/>

        <TextView
            android:id="@+id/text_view_nombreBuque"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buque"
            android:maxLines="1"
            android:layout_toStartOf="@+id/text_view_priority"
            android:layout_alignParentStart="true"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/text_view_operacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cargue/Descargue "
           android:layout_below="@+id/text_view_nombreBuque"/>

        <TextView
            android:id="@+id/text_view_nombre_producto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="XXXXX"
            android:layout_below="@+id/text_view_operacion"/>

        <TextView
            android:id="@+id/text_view_TL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TL 19000XX"
            android:layout_below="@+id/text_view_nombre_producto"/>

        <TextView
            android:id="@+id/text_view_nominacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="300.XXXX"
            android:layout_below="@+id/text_view_TL"/>







    </RelativeLayout>




</androidx.cardview.widget.CardView>